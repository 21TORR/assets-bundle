{
	"name": "21torr/assets",
	"description": "Fully integrated high-performance asset handling, works best in conjunction with Firefly.",
	"license": "MIT",
	"type": "symfony-bundle",
	"authors": [
		{
			"name": "21TORR",
			"homepage": "https://www.21torr.com/"
		}
	],
	"homepage": "https://github.com/21TORR/assets",
	"require": {
		"php": ">= 8.0",
		"ext-json": "*",
		"21torr/bundle-helpers": "^2.1",
		"21torr/cli": "^1.0",
		"21torr/html-builder": "^1.0",
		"psr/log": "^1.1 || ^2.0 || ^3.0",
		"symfony/cache": "^5.2 || ^6.0",
		"symfony/config": "^5.2 || ^6.0",
		"symfony/console": "^5.2 || ^6.0",
		"symfony/dependency-injection": "^5.2 || ^6.0",
		"symfony/filesystem": "^5.2 || ^6.0",
		"symfony/finder": "^5.2 || ^6.0",
		"symfony/http-kernel": "^5.2 || ^6.0",
		"symfony/mime": "^5.2 || ^6.0",
		"symfony/routing": "^5.2 || ^6.0",
		"symfony/string": "^5.2 || ^6.0",
		"twig/twig": "^3"
	},
	"require-dev": {
		"bamarni/composer-bin-plugin": "^1.4",
		"roave/security-advisories": "dev-latest",
		"symfony/phpunit-bridge": "^5.2 || ^6.0"
	},
	"autoload": {
		"psr-4": {
			"Torr\\Assets\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Torr\\Assets\\": "tests/"
		}
	},
	"config": {
		"allow-plugins": {
			"bamarni/composer-bin-plugin": true
		},
		"sort-packages": true
	},
	"extra": {
		"branch-alias": {
			"dev-next": "1.x-dev"
		}
	},
	"scripts": {
		"post-install-cmd": [
			"@composer bin all install --ansi"
		],
		"post-update-cmd": [
			"@composer bin all update --ansi"
		]
	}
}
